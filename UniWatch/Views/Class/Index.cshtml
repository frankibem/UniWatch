@model IEnumerable<UniWatch.Models.Class>

<h3>My Classes</h3>

<p>
    @Html.ActionLink("New Class", "Create", new { teacherId = (int)ViewBag.TeacherId }, new { @class = "btn btn-success" })
</p>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th></th>
        </tr>
        @if (Model.Any()) { 
         foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Index", "Lecture", new { classId = item.Id }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Section)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { classId = item.Id })
                </td>
            </tr>
        }
        }
        else
        {
            <hr4>There are no classes for this Teacher</hr4>
        }

    </table>
</div>